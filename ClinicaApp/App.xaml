<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:ClinicaApp.Converters"
             xmlns:local="clr-namespace:ClinicaApp.ViewModels"
             x:Class="ClinicaApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Aquí debe ir el convertidor -->
            <converters:EstadoToColorConverter x:Key="EstadoToColorConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
